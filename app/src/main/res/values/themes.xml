<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme_TiendaEvaluacion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Fuente por defecto -->
        <item name="android:fontFamily">@font/metal_mania</item>
        <item name="fontFamily">@font/metal_mania</item>
    </style>

    <!-- Estilo base para TextViews -->
    <style name="MetalTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/metal_mania</item>
        <item name="android:textColor">@color/bright_red</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Estilo base para EditText -->
    <style name="MetalEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/metal_mania</item>
        <item name="android:textColor">@color/bright_red</item>
        <item name="android:textColorHint">@color/bright_red</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Estilo base para Buttons -->
    <style name="MetalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/metal_mania</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bright_red</item>
        <item name="backgroundTint">#4D000000</item>
        <item name="strokeColor">@color/bright_red</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Estilo para tÃ­tulos -->
    <style name="MetalTitle" parent="MetalTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme_App_Starting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Agregar este estilo -->
    <style name="MetalBackground">
        <item name="android:background">@drawable/fondo1</item>
    </style>

    <style name="DarkBackground">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Agregar este estilo para Spinners -->
    <style name="MetalSpinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/spinner_button_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:textColor">@color/bright_red</item>
        <item name="android:fontFamily">@font/metal_mania</item>
        <item name="android:dropDownSelector">@color/black</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>