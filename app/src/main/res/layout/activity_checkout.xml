<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/DarkBackground">

    <TextView
        style="@style/MetalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkout_title"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:id="@+id/delivery_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            style="@style/MetalTextView"
            android:id="@+id/pickup_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup"/>

        <RadioButton
            style="@style/MetalTextView"
            android:id="@+id/delivery_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery"/>
    </RadioGroup>

    <EditText
        style="@style/MetalEditText"
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_hint"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <TextView
        style="@style/MetalTextView"
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"/>

    <Button
        style="@style/MetalButton"
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_order"/>

</LinearLayout> 