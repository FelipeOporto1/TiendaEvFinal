<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    style="@style/DarkBackground">

    <TextView
        style="@style/MetalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_profile"
        android:layout_marginBottom="24dp"/>

    <EditText
        style="@style/MetalEditText"
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:layout_marginBottom="16dp"/>

    <EditText
        style="@style/MetalEditText"
        android:id="@+id/current_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/current_password_hint"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <EditText
        style="@style/MetalEditText"
        android:id="@+id/new_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo nombre de usuario (opcional)"
        android:layout_marginBottom="16dp"/>

    <EditText
        style="@style/MetalEditText"
        android:id="@+id/new_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_password_hint"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <EditText
        style="@style/MetalEditText"
        android:id="@+id/confirm_new_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/confirm_new_password_hint"
        android:inputType="textPassword"
        android:layout_marginBottom="24dp"/>

    <Button
        style="@style/MetalButton"
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_button"/>

</LinearLayout> 