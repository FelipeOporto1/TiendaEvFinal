<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/bright_red"/>
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="40dp"
                android:bottom="12dp"/>
        </shape>
    </item>
    <item android:gravity="end|center_vertical" android:right="12dp">
        <rotate android:fromDegrees="45" android:toDegrees="45">
            <shape android:shape="rectangle">
                <size android:width="12dp" android:height="2dp"/>
                <solid android:color="@color/bright_red"/>
            </shape>
        </rotate>
    </item>
    <item android:gravity="end|center_vertical" android:right="18dp">
        <rotate android:fromDegrees="-45" android:toDegrees="-45">
            <shape android:shape="rectangle">
                <size android:width="12dp" android:height="2dp"/>
                <solid android:color="@color/bright_red"/>
            </shape>
        </rotate>
    </item>
</layer-list>
